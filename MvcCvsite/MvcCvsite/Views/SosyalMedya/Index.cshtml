@using MvcCvsite.Models.Entity
@model List<TblSosyalMedyalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Hesaplarım</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                             <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
                                 Yeni Sosyal Medya Hesabı Ekle
                                </button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Sosyal Medya </th>
                                            <th>Durum</th>
                                            <th>Düzenle</th>
                                            <th>Sil</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            


                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Ad</td>
                                                <td>@x.Durum</td>

                                                
                                              

                                                <td>
                                                    <a class="btn btn-dark btn-sm" href="/SosyalMedya/SayfaGetir/@x.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/SosyalMedya/Sil/@x.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->

                        </div>
                        <!-- /.card -->
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <!-- /.row -->
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
              <div class="modal-content">
                  <div class="modal-header">
                     <h2 class="modal-title">Sosyal Medya Hesabı Ekleme Penceresi</h2>
                  </div>
                  <form method="post" action="/SosyalMedya/Ekle/">
                      <div class="modal-body">
                          <label>Sosyal Medya İsmi</label>
                          <input type="text" name="Ad" class="form-control" />
                          <br />
                          <label>Sosyal Medya Linki</label>
                          <input type="text" name="Link" class="form-control" />
                          <br />
                          <label>Sosyal Medya İkon Değeri</label>
                          <input type="text" name="ikon" class="form-control" />
                          <br />
                          <button class="btn btn-info">Kaydet</button>
                      </div>
                  </form>
              </div>
            </div>
        </div>
    </div>
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <!-- /.control-sidebar -->
    <!-- ./wrapper -->
    <!-- jQuery -->

</body>
</html>




