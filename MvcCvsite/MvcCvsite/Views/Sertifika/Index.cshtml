@using MvcCvsite.Models.Entity
@model List<TblSertifikalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            
                        </div><!-- /.card-header -->
                        <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var x in Model)
                                        {


                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaGetir/@x.ID" class="btn btn-info">
                                                    <span class="bg-info">
                                                        @x.Tarih
                                                    </span>
                                                </a>
                                            </div>
                                            <!-- /.timeline-label -->
                                            <!-- timeline item -->
                                            <div>
                                                <i class="fas fa-file-alt bg-primary"></i>
                                                <div class="timeline-item">


                                                    <div class="timeline-body">
                                                       @x.Aciklama
                                                    </div>
                                                 
                                                </div>
                                            </div>
                                        }


                                    </div>
                                    <a href="/Sertifika/SertifikaEkle/" class="btn btn-info">Yeni Sertifika Ekle</a>
                                </div>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
  
    </section>
</body>
</html>

