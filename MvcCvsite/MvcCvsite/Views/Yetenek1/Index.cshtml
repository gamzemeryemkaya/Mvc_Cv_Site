@using MvcCvsite.Models.Entity
@model List<TblYeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{string renk = ""; }
@{string labelRenk = ""; }
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
      <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Yetenek Listem</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <a href="/Yetenek1/YeniYetenek/" class="btn btn-primary">Yeni Yetenek Ekle</a>
                                    <br />
                                    <br />
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Yetenek</th>
                                                <th>Derece</th>
                                                <th style="width: 40px">Oran</th>
                                                <th>Düzenle</th>
                                                <th>Sil</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var x in Model)
                                            {
                                                if (x.Oran >= 0 && x.Oran <= 50)
                                                {
                                                    renk = "progress-bar bg-danger";
                                                    labelRenk = "badge bg-danger";
                                                }
                                                if (x.Oran >= 51 && x.Oran <= 70)
                                                {
                                                    renk = "progress-bar bg-warning";
                                                    labelRenk = "badge bg-warning";
                                                }
                                                if (x.Oran >= 71 && x.Oran <= 84)
                                                {
                                                    renk = "progress-bar bg-primary";
                                                    labelRenk = "badge bg-primary";
                                                }
                                                if (x.Oran >= 85 && x.Oran <= 100)
                                                {
                                                    renk = "progress-bar bg-success";
                                                    labelRenk = "badge bg-success";
                                                }


                                            <tr>
                                                <td>@x.ID</td>
                                                <td>@x.Yetenek</td>

                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width:@x.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelRenk">@x.Oran%</span></td>
                                               
                                                <td>
                                                    <a class="btn btn-dark btn-sm" href="/Yetenek1/YetenekDüzenle/@x.ID">
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-danger btn-sm" href="/Yetenek1/YetenekSil/@x.ID">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Sil
                                                    </a>
                                                </td>
                                            </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                             
                            </div>
                            <!-- /.card -->
                        
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                      
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
            
                    <!-- /.row -->
                    
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Control Sidebar -->
    
        <!-- /.control-sidebar -->

    <!-- ./wrapper -->
    <!-- jQuery -->
   
</body>
</html>


